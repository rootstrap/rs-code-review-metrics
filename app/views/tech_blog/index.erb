<div class='metrics-container'>
  <div class='main-container'>
    <div class='blog-chart'>
      <%= line_chart @visits_per_technology.all_datasets, ytitle: "Visits" %>
    </div>
    <div class='metrics-summary-group'>
      <span class='metrics-summary-item'><%= @month_to_date_visits %> visits this month</span>
      <span class='metrics-summary-item'><%= @year_to_date_visits %> visits this year</span>
    </div>
  </div>
  <div class='main-container'>
    <div class='blog-chart'>
      <%= line_chart @blog_post_count_per_technology.all_datasets, ytitle: "Blog posts" %>
    </div>
    <div class='metrics-summary-group'>
      <span class='metrics-summary-item'><%= @month_to_date_new_blog_posts %> new posts this month</span>
      <span class='metrics-summary-item'><%= @year_to_date_new_blog_posts %> new posts this year</span>
    </div>
  </div>
  <div class='main-container'>
    <div class='blog-chart'>
      <%= line_chart @visits_growth_mom.all_datasets, suffix: "%", precision: 4, ytitle: "Visits Growth" %>
    </div>
    <div class='metrics-summary-group'>
      <span class='metrics-summary-item'><%= @this_month_visits_growth %>% growth this month</span>
      <span class='metrics-summary-item'><%= @last_month_visits_growth %>% growth last month</span>
    </div>
  </div>
</div>
