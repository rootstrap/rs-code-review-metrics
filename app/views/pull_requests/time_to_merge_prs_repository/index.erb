
<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 offset-1">
      <%= simple_form_for :metric, url: repository_time_to_merge_prs_repository_index_path, method: 'GET', html: {
                                                        class: 'nav-filter p-3 shadow-box', id: 'nav-filter-form' } do |f|%>
            <h4 class="text-center">Merge Time distribution report for <%= params[:repository_name] %> repository</h4>
            <div class="row justify-content-center mt-3">
              <%= f.input :period,
                label: 'Last Updated (Weeks)',
                wrapper_html: { class: 'period-selection d-flex flex-column mb-0' },
                input_html: { class: 'margin-left input-height', value: chosen_period },
                required: false,
                as: :numeric
              %>
            </div>
            <div class="row">
              <div class="col-md-12 d-flex justify-content-center">
                <%= f.button :submit, 'Submit', class: 'btn-secondary ml-1', id: 'submitButton' %>
              </div>
            </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-1 mt-5">
      <% @pull_requests.each do |k,v| %>
        <h6><%= k %> hours:</h6>
        <ul>
          <% v.each do |pr_link| %>
            <li>
              <%= link_to nil, pr_link, target: '_blank' %>
              </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
