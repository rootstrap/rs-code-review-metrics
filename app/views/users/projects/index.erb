<%= render 'shared/user/sidebar'%>
<div class="metrics-container">
  <h2 class='user-name'><%= @user.login%></h2>
  <hr>
  <span class='ml-3'>Code Owner in:</span>
  <% if @projects.present? %>
    <ul>
      <% @projects.each do |project|%>
        <li class='ml-3'>
          <%= link_to project.name,
              projects_development_metrics_path(project_name: project.name, metric: {period: 4}),
              class: 'link-none-style-black'
          %>
        </li>
      <%end%>
    </ul>
  <%else%>
    <p>
      <br>
      <strong>
        <em class='ml-3'>This user is not participating in any project as code owner</em>.
      </strong>
    </p>
  <%end%>
</div>
