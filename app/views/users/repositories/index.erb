<%=  render 'development_metrics/development_metrics_sidebar', enabled_users_section: @enabled_users_section %>

<div class="metrics-container col-md-12">
  <h2 class='user-name'><%= @user.login%></h2>
  <hr>
  <span class='ml-3'>Code Owner in:</span>
  <% if @repositories.present? %>
    <ul>
      <% @repositories.each do |repository|%>
        <li class='ml-3'>
          <%= link_to repository.name,
              repositories_development_metrics_path(repository_name: repository.name, metric: {period: 4}),
              class: 'link-none-style-black'
          %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>
      <br>
      <strong>
        <em class='ml-3'>This user is not participating in any repository as code owner</em>.
      </strong>
    </p>
  <% end %>
</div>
